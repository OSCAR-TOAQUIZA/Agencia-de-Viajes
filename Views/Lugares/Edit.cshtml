@model Pry_Agencia_Viajes.Lugar

@{
    ViewBag.Title = "Edit";
}

<div class="super_container">

    @Html.Partial("Cabezera_Lugar", "EDITAR")
    <div class="container">
        <br />
        @using (Html.BeginForm("Edit", "Lugares", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row jumbotron">

            <div class="col-12 text-center">
                <h3>Formulario para Editar "@Html.DisplayFor(model => model.lug_nombre)"</h3>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.lug_id)
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.lug_nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.lug_nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.lug_nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.ciu_id, "Seleccione la ciudad a la que pertenece el Lugar", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("ciu_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ciu_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.lug_descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.lug_descripcion, new { @class = "form-control", @rows = 3 } )
                        @Html.ValidationMessageFor(model => model.lug_descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.lug_estado, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.lug_estado)
                            @Html.ValidationMessageFor(model => model.lug_estado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.lug_ruta_foto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="ImagenLugar" class="form-control" />
                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.lug_observacion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.lug_observacion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.lug_observacion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group">
                    <input type="submit" value="Guardar Cambios" class="btn btn-success" />
                    <a class="btn btn-danger" href="@Url.Action("Index")">Cancelar</a>
                </div>
            </div>
        </div>
}
    </div>
    </div>
                
