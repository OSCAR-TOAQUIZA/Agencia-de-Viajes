@model Pry_Agencia_Viajes.Detalle_Habitacion

@{
    ViewBag.Title = "Create";
}

<div class="super_container">

    @Html.Partial("CabezeraDetalleHabitaciones", "CREAR")
    <br />

    <div class="container">
        @using (Html.BeginForm())
        {
        <div class="row jumbotron">
            @Html.AntiForgeryToken()

            <div class="col-12 text-center">
                <h3>Formulario para Regitrar Habitación en Hotel</h3>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.hot_id, "Nombre del Hotel", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("hot_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.hot_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.hab_id, "Tipo de Habitación", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("hab_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.hab_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.dha_costo, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dha_costo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dha_costo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.dha_observacion, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dha_observacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dha_observacion, "", new { @class = "text-danger" })
                </div>
            </div>
                </div>
            <div class="col-12">
                <input type="submit" value="Registrar" class="btn btn-success" />
                <a class="btn btn-danger" href="@Url.Action("Index")">Cancelar</a>
            </div>
        </div>
}
        </div>
</div>

