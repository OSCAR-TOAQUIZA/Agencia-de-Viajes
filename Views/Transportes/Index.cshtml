@model IEnumerable<Pry_Agencia_Viajes.Transporte>

@{
    ViewBag.Title = "Index";
}

<div class="super_container">

    @Html.Partial("CabezeraTransporte", "Lista de Transportes")
    <div class="">
        <br />
        <div class="container">
            <p>
                @Html.ActionLink("Registrar Nuevo Transporte", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.tra_tipo_transporte)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tra_costo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tra_origen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tra_destino)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tra_hora_salida)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tra_hora_llegada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tra_descripcion)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.tra_tipo_transporte)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tra_costo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tra_origen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tra_destino)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tra_hora_salida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tra_hora_llegada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tra_descripcion)
                        </td>
                        <td class="button-group">
                            @Html.ActionLink("Editar", "Edit", new { id = item.tra_id }, new { @class = "btn btn-primary btn-sm btn-block"}) 
                            <button id="botonModal" type="button" onclick="pasarIdTransporte(@item.tra_id)" class="btn btn-danger btn-sm btn-block" data-toggle="modal" data-target="#exampleModal">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Actividad</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de eliminar los datos del transporte?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>


                @using (Html.BeginForm("Delete", "Transportes", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input id="valor_id_Transporte" type="number" name="id" hidden />
                    <input type="submit" value="Si, Eliminar" class="btn btn-danger" />
                }

            </div>
        </div>
    </div>
</div>


<script>
    var id_cod;
    function pasarIdTransporte(data) {
        console.log(data);
        id_cod = data;
        document.getElementById("valor_id_Transporte").value = id_cod;
    }

</script>