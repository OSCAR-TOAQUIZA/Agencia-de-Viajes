@model Pry_Agencia_Viajes.Ciudad

@{
    ViewBag.Title = "Create";
}

<div class="super_container">

    @Html.Partial("Cabezera_Ciudad", "CREAR")
    <div class="">
        <div class="container">
            <div class="">
                <div class="">
                    @using (Html.BeginForm("Create", "Ciudades", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
                @Html.AntiForgeryToken()

                    <div class="row jumbotron">
                        <div class="col-12 text-center">
                            <h3>Formulario para Agregar una Ciudad Nueva</h3>
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ciu_nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ciu_nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ciu_nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ciu_ruta_foto, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="file" name="ImagenFile" />
                                </div>
                                <span class="text-danger">@ViewBag.ErrorFoto</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ciu_descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.ciu_descripcion, new { @class = "form-control", @rows = 3 })
                                    @Html.ValidationMessageFor(model => model.ciu_descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ciu_clima, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.ciu_clima, new { @class = "form-control", @row = 3 })
                                    @Html.ValidationMessageFor(model => model.ciu_clima, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ciu_recomendaciones, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ciu_recomendaciones, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ciu_recomendaciones, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ciu_observacion, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ciu_observacion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ciu_observacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="col-md-12  justify-content-md-center">
                           
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                    <a class="btn btn-danger" href="@Url.Action("Index")">Cancelar</a>
                     
                        </div>
                    </div>
}
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
