<div class="offers">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h2 class="section_title">Las Mejores Actividades las Encuentras AQUÍ</h2>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                @Html.ActionLink("Ver Lista de Paquetes", "Index", "PaquetesTuristicos", null, new { @class = "btn btn-success" })
                @Html.ActionLink("Ver Lista de Transportes", "Index", "Transportes", null, new { @class = "btn btn-warning" })
            </div>
        </div>

        <div class="row offers_items">




            @foreach (var item in Model)
            {

                <!-- Offers Item -->
                <div class="col-lg-6 offers_col">
                    <div class="offers_item">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="offers_image_container">
                                    <!-- Image by Egzon Bytyqi -->
                                    <div class="offers_image_background" style="background-image:url(@Url.Content(item.act_ruta_foto_1))"></div>
                                    <div class="offer_name"><a href="#">@Html.DisplayFor(modelItem => item.act_nombre)</a></div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="offers_content">
                                    <div class="offers_price">  @Html.DisplayFor(modelItem => item.act_costo) <span>por persona</span></div>
                                    <div class="rating_r rating_r_4 offers_rating">
                                        <i></i>
                                        <i></i>
                                        <i></i>
                                        <i></i>
                                        <i></i>
                                    </div>
                                    <p class="offers_text">
                                        @Html.DisplayFor(modelItem => item.act_descripcion)
                                    </p>
                                    @Html.DisplayFor(modelItem => item.Lugar.lug_nombre)
                                    <div class="offers_icons">
                                        <ul class="offers_icons_list">
                                            <li class="offers_icons_item"><img src="~/Content/images/post.png" alt=""></li>
                                            <li class="offers_icons_item"><img src="~/Content/images/compass.png" alt=""></li>
                                            <li class="offers_icons_item"><img src="~/Content/images/bicycle.png" alt=""></li>
                                            <li class="offers_icons_item"><img src="~/Content/images/sailboat.png" alt=""></li>
                                        </ul>
                                    </div>
                                    <div class="offers_link">
                                        @Html.ActionLink("Ver Lugar", "Index", "Lugares")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }




        </div>
    </div>
</div>

